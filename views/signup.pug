extends layout 

block content 
    h1= title
    hr
    form(action="", method="post")
        label(for="username") Username
        input.form-control(type="text", name="username" , placeholder="username", required=true)
        br
        label(for="email") Email
        input.form-control(type="text", name="email", placeholder="email", required=true)
        br
        label(for="password") Password
        input.form-control(type="password", name="password", placeholder="password", required=true)
        br
        button.btn.btn-primary(type="submit") Signup