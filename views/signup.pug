extends layout 

block content 
    h1= title
    hr
    form(action="", method="post")
        label(for="first_name") First name
        input.form-control(type="text", name="first_name" , placeholder="First name", required=true)
        br
        label(for="last_name") Last name
        input.form-control(type="text", name="last_name" , placeholder="Last name", required=true)
        br
        label(for="email") Email
        input.form-control(type="text", name="email", placeholder="email", required=true)
        br
        label(for="password") Password
        input.form-control(type="password", name="password", placeholder="password", required=true)
        br
        button.btn.btn-primary(type="submit") Signup