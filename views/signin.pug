extends layout 

block content 
    .d-flex.justify-content-center
        div
            h1= title
            hr
            form(action="", method="post")
                label(for="email") Email
                input.form-control(type="email", name="email", placeholder="Email", required=true)
                br
                label(for="password") Password
                input.form-control(type="password", name="password", placeholder="Password", required=true)
                br
                button.btn.btn-primary.w-100(type="submit") Sign in
