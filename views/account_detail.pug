extends layout 

block content 
    h1 Welcome #{user.username}!
    div 
        h3 #{user.username}
        h4 #{user.email}
        h4 #{user.phone}
        
        //- Cart
        div.cart-thumbnail
            p Cart items: #{cartItems}
            a(href="/account/cart") cart
        
        br

        //- Purchase
        div.purchase-thumbnail
            p Orders: #{orders}
            a(href="/account/orders") orders
